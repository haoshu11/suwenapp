<scroll-view id="sv" scroll-y style="background:#eee; height: 300px">
  <view class="page-section-title-space page-section-title">在此灰色区域向上滑动出现 target 节点触发事件</view>
  <view id="target" style="margin:300px auto 0; width: 150px; height: 150px; background: lightblue;"></view>
</scroll-view>
<view style="text-align: center; margin-top: 10px; font-size: 14px; color: #000;">
  <view>{{isShow ? "target visible" : "target Invisible"}}</view>
  <button class="switch-btn" type="primary" bindtap="handleSwitchConnectStatusBtnClick">
    {{ isDisconnect ? 'intersectionObserver.connect' : 'intersectionObserver.disconnect' }}
  </button>
</view>